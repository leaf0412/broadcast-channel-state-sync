{
  "name": "broadcast-channel-state-sync",
  "version": "1.0.0",
  "description": "A TypeScript library for state synchronization across browser tabs using BroadcastChannel",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "homepage": "https://github.com/leaf0412/broadcast-channel-state-sync",
  "repository": {
    "type": "git",
    "url": "https://github.com/leaf0412/broadcast-channel-state-sync.git"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "prepare": "npm run build",
    "release": "release-it"
  },
  "keywords": [
    "broadcast-channel",
    "state-management",
    "typescript",
    "tab-sync",
    "browser-sync"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "release-it": "^18.1.2",
    "tsup": "^8.4.0",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "dependencies": {
    "@reduxjs/toolkit": "^2.6.1",
    "mobx": "^6.13.7",
    "pinia": "^3.0.1",
    "zustand": "^5.0.3"
  }
}
